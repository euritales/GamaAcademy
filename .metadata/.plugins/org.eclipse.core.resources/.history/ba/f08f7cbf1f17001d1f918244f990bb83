import java.util.ArrayList;
import java.util.Scanner;

public class ControleFrutas {

	public static void main(String[] args) {

		ArrayList<String> frutas = new ArrayList<String>();
		Scanner teclado = new Scanner(System.lineSeparator());
		String strConvert, fruta;
		int escolha = 1;
		
		while(escolha != 0) {
		System.out.println("Escolha uma opcao: 1 - Cadastrar; 2 - Listar; 3 - Excluir; 4 - Listar Frutas com ID; 5 - Modificar fruta; 0 - Sair;");
		strConvert = teclado.nextLine();
		escolha = Integer.parseInt(strConvert);

		 switch (escolha) {
	     case 1:
	       System.out.println("Cadastrando Fruta:");
	       strConvert
	       frutas.add()
	       break;
	     case 2:
	       System.out.println("O número escolhido foi: 2.");
	       break;
	     case 3:
	       System.out.println("O número escolhido foi: 3.");
	       break;
		
		frutas.add(teclado.next());
		
		System.out.println(frutas);
		 }
	 }

}
