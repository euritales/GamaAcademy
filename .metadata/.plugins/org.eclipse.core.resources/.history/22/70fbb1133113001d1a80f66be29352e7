
public class MostraMensagem {

	public static void main(String[] args) {
		String nome = "Rot";
		int idade = 19;
		
		int num1 = 13;
		int num2 = 13;
		System.out.println("Olá "+ nome +". Sua idade: " + idade);
		System.out.println("Resultado da adção: " + (num1 + num2));
		System.out.println("Resultado da subtração: " + (num1 - num2));
		System.out.println("Resultado da divisão: " + num1 / num2);
		System.out.println("Resultado da multiplição: " + num1 * num2);
	}

}
